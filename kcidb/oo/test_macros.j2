{# Test template macros #}

{% macro summary(test) %}
    {% set empty = True %}
    {% if test.path %}
        {{- test.path -}}
        {% set empty = False %}
    {% endif %}
    {% if test.comment %}
        {{- "" if empty else " - " -}}
        {{- test.comment -}}
        {% set empty = False %}
    {% endif %}
    {% if empty %}
        {{- test.id -}}
    {% endif %}
{% endmacro %}

